@model HotelManage_LTDD.Models.Area

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            <form asp-action="Edit" method="post" >
                <div class="mb-3">
                    <label for="Name" class="form-label">Tên loại phòng:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>

            <div class="d-grid">
                <a href="@Url.Action("Index", "Area")" class="btn btn-secondary">Quay trở lại</a>
            </div>
        </div>
    </div>
</div>
