@model HotelManage_LTDD.Models.User

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow" style="width: 30rem;">
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <div style="width: 100%; height: 30rem; overflow: hidden; position: relative;">
                    <img src="@Model.AvatarUrl" alt="@Model.AvatarUrl"
                         style="width: 100%; height: 100%; object-fit: cover; object-position: center;"
                         class="img-fluid" />
                </div>
            }
            else
            {
                <p class="text-muted mb-3">Không có ảnh nào</p>
            }

            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
            <p class="card-text"><strong>Mật khẩu:</strong> @Model.Password</p>
            <a asp-area="Admin" asp-action="Index" asp-controller="Employee" class="btn btn-primary mt-3">Quay lại</a>
        </div>
    </div>
</div>
