@model HotelManage_LTDD.Models.User

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-header ">
            <h4 class="mb-0">Thông tin nhân viên</h4>
        </div>
        <div class="card-body text-center">
            @if (Model.AvatarUrl != null && Model.AvatarUrl.Any())
            {
                <div class="mb-3" style="width: 100%; height: 20rem; overflow: hidden; position: relative;">
                    <img src="@Model.AvatarUrl" alt="Avatar"
                         style="width: 100%; height: 100%; object-fit: cover; object-position: center;" />
                </div>
            }
            else
            {
                <p class="text-muted">Không có ảnh nào</p>
            }

            <h5 class="card-title text-uppercase mt-3">@Model.Name</h5>
            <hr />
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
            <p class="card-text"><strong>Mật khẩu:</strong> @Model.Password</p>
        </div>
        <div class="card-footer text-center">
            <a asp-area="Admin" asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
