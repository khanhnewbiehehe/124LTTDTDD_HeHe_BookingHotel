@model HotelManage_LTDD.Models.RoomType

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow-lg" style="width: 30rem; border-radius: 15px;">
        <div class="card-header" >
            <h5 class="card-title">Chỉnh sửa loại phòng</h5>
        </div>
        <div class="card-body">
            <form asp-area="Admin" asp-action="Edit" asp-controller="RoomType" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên loại phòng:</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên loại phòng" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả:</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả loại phòng" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="People" class="form-label">Số người tối đa:</label>
                    <input asp-for="People" class="form-control" type="number" placeholder="Nhập số người tối đa" required />
                    <span asp-validation-for="People" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ImageUrl" class="form-label">Hình ảnh:</label>
                    <input type="file" id="ImageUrl" name="ImageUrl" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-3 text-center">
                            <strong>Hình ảnh hiện tại:</strong>
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px; height: auto;" />
                        </div>
                    }
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>

            <div class="d-grid">
                <a asp-area="Admin" asp-action="Index" asp-controller="RoomType" class="btn btn-secondary form-control">Quay lại</a>
            </div>
        </div>
    </div>
</div>
