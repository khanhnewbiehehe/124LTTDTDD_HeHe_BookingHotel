@model HotelManage_LTDD.Models.RoomType

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow-lg" style="width: 30rem; border-radius: 15px;">
        <!-- Card Header -->
        <div class="card-header " >
            <h5 class="card-title ">Chi tiết loại phòng</h5>
        </div>
        <div class="card-body">
            @if (Model.ImageUrl != null && Model.ImageUrl.Any())
            {
                <div class="mb-3" style="width: 100%; height: 20rem; overflow: hidden; position: relative;">
                    <img src="@Model.ImageUrl" alt="Avatar"
                         style="width: 100%; height: 100%; object-fit: cover; object-position: center;" />
                </div>
            }
            else
            {
                <p class="text-muted">Không có ảnh nào</p>
            }

            <h5 class="card-title text-primary">@Model.Name</h5>
            <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
            <p class="card-text"><strong>Số người tối đa:</strong> @Model.People</p>
        </div>
        <div class="card-footer ">
            <a asp-area="Admin" asp-action="Index" asp-controller="RoomType" class="btn btn-secondary w-100">Quay lại</a>
        </div>
    </div>
</div>
