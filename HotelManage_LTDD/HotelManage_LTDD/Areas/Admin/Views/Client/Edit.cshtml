@model HotelManage_LTDD.Models.User

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow-lg border-0" style="width: 35rem;">
        <div class="card-header ">
            <h5 class="mb-0">Chỉnh sửa thông tin khách hàng</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <input class="Role" id="Role" name="Role" value="Client" type="hidden" />

                <div class="mb-3">
                    <label for="Name" class="form-label fw-bold">Họ và tên:</label>
                    <input type="text" id="Name" name="Name" class="form-control shadow-sm" value="@Model.Name" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control shadow-sm" value="@Model.Email" required />
                </div>

                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label fw-bold">Số điện thoại:</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control shadow-sm" value="@Model.PhoneNumber" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label fw-bold">Mật khẩu:</label>
                    <input type="password" id="Password" name="Password" class="form-control shadow-sm" value="@Model.Password" required />
                </div>

                <div class="mb-3">
                    <label for="Vip" class="form-label fw-bold">Vip:</label>
                    <input type="number" id="Vip" name="Vip" class="form-control shadow-sm" value="@Model.Vip" required />
                </div>

                <div class="mb-3">
                    <label for="AvatarUrl" class="form-label fw-bold">Hình ảnh:</label>
                    <input type="file" id="AvatarUrl" name="AvatarUrl" class="form-control shadow-sm" />
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <div class="mt-3 text-center">
                            <strong>Hình ảnh hiện tại:</strong>
                            <img src="@Model.AvatarUrl" alt="@Model.AvatarUrl"
                                 class="img-thumbnail mt-2 shadow-sm"
                                 style="max-width: 200px; height: auto;" />
                        </div>
                    }
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary shadow">Lưu thay đổi</button>
                </div>
            }

            <div class="d-grid">
                <a asp-area="Admin" asp-action="Index" asp-controller="Client" class="btn btn-secondary shadow">Quay lại</a>
            </div>
        </div>
    </div>
</div>
