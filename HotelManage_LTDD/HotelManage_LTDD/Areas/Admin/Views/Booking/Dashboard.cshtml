<div class="container my-5">
    <h1 class="mb-4">Danh sách phòng</h1>
    <div class="row my-4 align-items-center">
        <div class="col-auto">
            <label for="CheckIn" class="form-label">Chọn ngày nhận phòng:</label>
            <input type="date" id="CheckIn" class="form-control" required />
        </div>
        <div class="col-auto">
            <label for="CheckOut" class="form-label">Chọn ngày trả phòng:</label>
            <input type="date" id="CheckOut" class="form-control" required />
        </div>
    </div>
    <table id="FreeRoomTable" class="table table-striped table-bordered pt-5" cellspacing="0" width="100%">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Số phòng</th>
                <th>Loại phòng</th>
                <th>Khu vực</th>
                <th>Giá (VND)</th>
                <th>Trạng thái</th>
                <th>Giảm giá(%)</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dữ liệu sẽ được nạp qua Ajax -->
        </tbody>
    </table>

    <h1 class=" mb-4">Danh sách khách hàng</h1>
    <table id="ClientTable" class="table table-striped table-bordered pt-5" style="width:100%">
        <a href="/Admin/Client/Create" class="btn btn-primary my-3">Tạo khách hàng</a>
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Chức năng</th>
            </tr>
        </thead>
    </table>
</div>
