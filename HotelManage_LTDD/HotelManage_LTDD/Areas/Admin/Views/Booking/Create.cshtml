@model HotelManage_LTDD.Models.Booking

<h2>Tạo Đặt Phòng</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Admin/Booking/Create">

            <div class="form-group">
                <label for="UserID">Người dùng</label>
                <input type="text" id="UserID" name="UserID" class="form-control" placeholder="Nhập UserID" />
                <span class="text-danger">@Html.ValidationMessage("UserID")</span>
            </div>

            <div class="form-group">
                <label for="RoomID">Phòng</label>
                <input type="text" id="RoomID" name="RoomID" class="form-control" placeholder="Nhập RoomID" />
                <span class="text-danger">@Html.ValidationMessage("RoomID")</span>
            </div>

            <div class="form-group">
                <label for="VoucherCode">Mã Giảm Giá (nếu có)</label>
                <input type="text" id="VoucherCode" name="VoucherCode" class="form-control" placeholder="Nhập Mã Voucher (nếu có)" />
                <span class="text-danger">@Html.ValidationMessage("VoucherCode")</span>
            </div>

            <div class="form-group">
                <label for="CheckIn">Ngày Nhận Phòng</label>
                <input type="date" id="CheckIn" name="CheckIn" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("CheckIn")</span>
            </div>

            <div class="form-group">
                <label for="CheckOut">Ngày Trả Phòng</label>
                <input type="date" id="CheckOut" name="CheckOut" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("CheckOut")</span>
            </div>

            <div class="form-group">
                <label for="Status">Trạng Thái</label>
                <input type="text" id="Status" name="Status" class="form-control" placeholder="Nhập trạng thái đặt phòng" />
                <span class="text-danger">@Html.ValidationMessage("Status")</span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Tạo Mới</button>
                <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>
