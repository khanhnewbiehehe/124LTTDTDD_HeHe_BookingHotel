@model HotelManage_LTDD.Models.Booking

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h5 class="mb-0">Thông Tin Đặt Phòng</h5>
                </div>
                <div class="card-body">
                    <form action="/Admin/Booking/Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="UserID" name="UserID" class="form-control" placeholder="Nhập UserID" />
                        <div class="form-group mb-3">
                            <label for="UserID">Người dùng</label>
                            <input type="text" id="UserName" class="form-control" placeholder="Chọn người dùng" readonly/>
                            <span class="text-danger">@Html.ValidationMessage("UserID")</span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="VoucherCode">Mã Giảm Giá (nếu có)</label>
                            <input type="text" id="VoucherCode" name="VoucherCode" class="form-control" placeholder="Nhập Mã Voucher (nếu có)" />
                            <span class="text-danger">@Html.ValidationMessage("VoucherCode")</span>
                        </div>
                        <div class="form-group mb-3">
                            <label>Phòng</label>
                            <input type="text" class="form-control" value="@Model.RoomCode" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label>Ngày Nhận Phòng</label>
                            <input type="text" class="form-control" value="@Model.CheckIn" readonly/>
                        </div>

                        <div class="form-group mb-3">
                            <label>Ngày Trả Phòng</label>
                            <input type="text" class="form-control" value="@Model.CheckOut" readonly/>
                        </div>
                        <input type="hidden" id="CheckOut" name="CheckOut" class="form-control" value="@Model.CheckOut" />
                        <input type="hidden" id="CheckIn" name="CheckIn" class="form-control" value="@Model.CheckIn" />
                        <input type="hidden" id="RoomID" name="RoomID" class="form-control" placeholder="Nhập RoomID" value="@Model.RoomID" />
                        <input type="hidden" id="Status" name="Status" class="form-control" placeholder="Nhập trạng thái đặt phòng" value="Chờ nhận phòng"/>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary">Tạo Mới</button>
                        </div>
                    </form>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Hủy</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h1 class=" mb-4">Danh sách khách hàng</h1>
<table id="clientBookingTable" class="table table-striped table-bordered pt-5" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Chức năng</th>
        </tr>
    </thead>
</table>