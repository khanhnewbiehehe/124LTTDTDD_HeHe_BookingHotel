@model HotelManage_LTDD.Models.Voucher

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Voucher", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Name" class="form-label">Tên ưu đãi:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                </div>

                <div class="mb-3">
                    <label for="Code" class="form-label">Mã ưu đãi:</label>
                    <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" required />
                </div>

                <div class="mb-3">
                    <label for="Discount" class="form-label">Giảm giá (%):</label>
                    <input type="number" step="5" id="Discount" name="Discount" class="form-control" value="@Model.Discount" required />
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Mô tả:</label>
                    <textarea id="Description" name="Description" class="form-control" rows="4" required>@Model.Description</textarea>
                </div>

                <div class="mb-3">
                    <label for="Quantity" class="form-label">Số lượng</label>
                    <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" required />
                </div>

                <div class="mb-3">
                    <label for="Status" class="form-label">Trạng thái:</label>
                    <input type="text" id="Status" name="Status" class="form-control" value="@Model.Status" required />
                </div>

                <div class="mb-3">
                    <label for="ImageUrl" class="form-label">Hình ảnh:</label>
                    <input type="file" id="ImageUrl" name="ImageUrl" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-3 text-center">
                            <strong>Hình ảnh hiện tại:</strong>
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px; height: auto;" />
                        </div>
                    }
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            }

            <div class="d-grid">
                <a asp-area="Admin" asp-action="Index" asp-controller="Voucher" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
