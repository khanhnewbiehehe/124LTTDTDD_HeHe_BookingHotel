@model HotelManage_LTDD.Models.Room

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header">
            <h3 class="mb-0">Sửa Thông Tin Phòng</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="TypeName" class="form-label">Loại Phòng</label>
                        <select asp-for="TypeName" class="form-control" id="TypeName" required>
                            <option value="">Chọn loại phòng</option> <!-- Thêm một option mặc định -->
                        </select>
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="AreaName" class="form-label">Tên Khu Vực</label>
                        <select asp-for="AreaName" class="form-control" id="AreaName" required>
                            <option value="">Chọn khu vực</option> <!-- Thêm một option mặc định -->
                        </select>
                        <span asp-validation-for="AreaName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Code" class="form-label">Số phòng</label>
                        <input asp-for="Code" class="form-control" placeholder="Nhập số phòng" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá (VND)</label>
                        <input asp-for="Price" class="form-control" type="number" step="50000" placeholder="Nhập giá" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Discount" class="form-label">Giảm giá (%)</label>
                        <input asp-for="Discount" class="form-control" type="number" step="5" placeholder="Nhập giảm giá" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Sẵn sàng">Sẵn sàng</option>
                            <option value="Bảo trì">Bảo trì</option>
                            <option value="Ngưng hoạt động">Ngưng hoạt động</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="images" class="form-label">Tải ảnh lên</label>
                    <input id="images" name="images" type="file" multiple class="form-control" accept="image/*" />
                </div>

                <div class="mb-3">
                    <label>Hình ảnh hiện tại</label>
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="row g-3">
                            @foreach (var image in Model.Images)
                            {
                                <div class="col-md-3">
                                    <img src="@image" class="img-fluid img-thumbnail" alt="Room Image"
                                         style="width: 20rem; height: 20rem; object-fit: cover;">
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có ảnh nào.</p>
                    }
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2 form-control">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary form-control">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
