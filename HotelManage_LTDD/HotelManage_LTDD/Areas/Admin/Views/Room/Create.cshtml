@model HotelManage_LTDD.Models.Room

<form asp-area="Admin" asp-controller="Room" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="TypeName">Type Name</label>
        <input type="text" class="form-control" id="TypeName" name="TypeName" />
    </div>
    <div class="form-group">
        <label for="AreaName">Area Name</label>
        <input type="text" class="form-control" id="AreaName" name="AreaName" />
    </div>
    <div class="form-group">
        <label for="Code">Số phòng</label>
        <input type="text" class="form-control" id="Code" name="Code" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="50000" class="form-control" id="Price" name="Price" />
    </div>
    <div class="form-group">
        <label for="Discount">Discount</label>
        <input type="number" step="5" class="form-control" id="Discount" name="Discount" />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" name="Status" />
    </div>
    <div class="form-group">
        <label for="Images">Images</label>
        <input type="file" class="form-control" id="Images" name="images" multiple />
    </div>
    <button type="submit" class="btn btn-primary">Create Room</button>
</form>
