@model HotelManage_LTDD.Models.HotelArea

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-header">
            <h4 class="mb-0">Chỉnh sửa khu vực</h4>
        </div>
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Area" asp-action="Edit" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Tên khu vực:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" placeholder="Nhập tên khu vực" required />
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
