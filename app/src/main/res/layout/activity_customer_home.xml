<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/background_ht"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".customer_home">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#03A9F4"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_ht">

        <Button
            android:id="@+id/btn_nav"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="36dp"
            android:layout_marginTop="68dp"
            android:text="Xin chào Khánh!"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/white_fill_date_container"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hello">


            <Button
                android:id="@+id/btn_CheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/white_filled_input"
                android:drawableStart="@drawable/icon_calendar"
                android:drawableTint="#0F77A6"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="Ngày nhận phòng"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hello" />

            <Button
                android:id="@+id/btn_CheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/white_filled_input"
                android:drawableStart="@drawable/icon_calendar"
                android:drawableTint="#0F77A6"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="Ngày trả phòng"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@id/btn_CheckIn"
                app:layout_constraintStart_toStartOf="@id/btn_CheckIn"
                app:layout_constraintTop_toBottomOf="@+id/btn_CheckIn" />

            <Button
                android:id="@+id/btn_check_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/blue_fill_rounded_topleft_topright"
                android:drawableRight="@drawable/icon_search"
                android:drawablePadding="20dp"
                android:includeFontPadding="false"
                android:paddingStart="90dp"
                android:paddingEnd="100dp"
                android:layout_marginTop="25dp"
                android:text="Tìm kiếm  "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/khung_canh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Khung Cảnh"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/layout_loai_phong"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_loai_phong" />


        <LinearLayout
            android:id="@+id/layout_khung_canh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="@+id/khung_canh"
            app:layout_constraintStart_toStartOf="@+id/khung_canh"
            app:layout_constraintTop_toBottomOf="@+id/khung_canh">

            <FrameLayout
                android:id="@+id/id_bien"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/khung_canh"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/khung_canh"
                app:layout_constraintTop_toBottomOf="@+id/khung_canh">

                <ImageView
                    android:id="@+id/img_slider3"
                    android:layout_width="117dp"
                    android:layout_height="86dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />

                <Button
                    android:id="@+id/btn_bien"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Biển"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_thanh_pho"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/id_bien"
                app:layout_constraintTop_toBottomOf="@+id/khung_canh">

                <Button
                    android:id="@+id/btn_thanh_pho"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Thành Phố"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/img_slider4"
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_cua_so"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/id_thanh_pho"
                app:layout_constraintTop_toBottomOf="@+id/khung_canh">

                <ImageView
                    android:id="@+id/img_slider5"
                    android:layout_width="117dp"
                    android:layout_height="86dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />

                <Button
                    android:id="@+id/btn_cua_so"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Cửa Sổ"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />


            </FrameLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/loaiphong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Loại Phòng"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/layout_loai_phong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="@+id/loaiphong"
            app:layout_constraintStart_toStartOf="@+id/loaiphong"
            app:layout_constraintTop_toBottomOf="@+id/loaiphong">

            <FrameLayout
                android:id="@+id/id_phong_don"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/loaiphong"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/loaiphong"
                app:layout_constraintTop_toBottomOf="@+id/loaiphong">

                <ImageView
                    android:id="@+id/img_slider"
                    android:layout_width="117dp"
                    android:layout_height="86dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />

                <Button
                    android:id="@+id/btn_phong_don"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Phòng Đơn"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_phong_doi"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/id_phong_don"
                app:layout_constraintTop_toBottomOf="@+id/loaiphong">

                <Button
                    android:id="@+id/btn_phong_doi"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Phòng Đôi"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/img_slider1"
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_phong_gia_dinh"
                android:layout_width="117dp"
                android:layout_height="86dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/back_ground_customer_search"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/id_phong_doi"
                app:layout_constraintTop_toBottomOf="@+id/loaiphong">

                <ImageView
                    android:id="@+id/img_slider2"
                    android:layout_width="117dp"
                    android:layout_height="86dp"
                    android:background="@drawable/rounded_img"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room_img" />

                <Button
                    android:id="@+id/btn_phong_gia_dinh"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    android:background="@drawable/background_btn_loai"
                    android:text="Phòng Gia Đình"
                    android:textColor="#234BD5"
                    android:textSize="10dp" />


            </FrameLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>