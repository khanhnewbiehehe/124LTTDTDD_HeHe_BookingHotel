<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/white_fill_container">

        <ImageView
            android:id="@+id/room_list_k_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/lefttop_leftbottom_rounded"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/room_list_k_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten phong"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/room_list_k_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loai phong"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/room_list_k_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="So Tien"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>