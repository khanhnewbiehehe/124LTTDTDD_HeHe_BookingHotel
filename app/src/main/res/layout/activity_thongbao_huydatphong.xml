<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongbao_huydatphong"
    android:background="@drawable/background_ht"
    android:gravity="center">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="322dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/white_fill_container"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/icon_check"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/green"
            />


        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Huỷ phòng thành công"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/thongbao_huydatphong_trangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Trang Chủ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>